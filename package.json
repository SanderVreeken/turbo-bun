{
    "name": "turbo-bun",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "check-types": "turbo run check-types"
    },
    "devDependencies": {
        "eslint-plugin-format": "^1.0.2",
        "prettier": "^3.6.2",
        "turbo": "^2.5.8",
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "bun@1.2.10",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}

{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["build/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "check": {
            "dependsOn": ["^check"]
        },
        "check:watch": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "preview": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        }
    }
}
